<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App01_ConsultarCEP"
             x:Class="App01_ConsultarCEP.MainPage">

    <StackLayout BackgroundColor="#FFBF00" 
                 Padding="30" 
                 Spacing="30">
        <!-- Place new controls here -->

        <Image x:Name="LOGO"
            Source="logo.png" />

        <Entry x:Name="CEP"
            Placeholder="Digite o cep" PlaceholderColor="#FFBF00" BackgroundColor="#FFFFFF"
               />

        <Button x:Name="BOTAO"
            Text="BUSCAR CEP" TextColor="#FFFFFF" BackgroundColor="#00416B"
                />
   
        <Label x:Name="RESULTADO"
           Text="" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
    </StackLayout>

</ContentPage>
